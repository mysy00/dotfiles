# Show keybindings
super + F1
	keybindings

# Run rofi run
super + space
	rofi -show drun

# Emoji picker
super + semicolon
	rofimoji

# Open terminal
super + Return
	$TERMINAL

# Open the main editor
super + e
	$TERMINAL -e $EDITOR

super + c
	code

# Open web browser
super + b
	$BROWSER

# Open Discord
super + d
	discord

# Open Thunar
super + f
	$TERMINAL -e ranger

# Open Bluetooth manager
super + t
	rofi-bluetooth

# Close window
super + x
	bspc node -c

# Go to specific window
super + Tab
	rofi -show window

# Focus windows by direction, works with multihead
super + {h,j,k,l}
	focusmover {west,south,north,east}

super + {Left,Down,Up,Right}
	focusmover {west,south,north,east}

# Mute song
super + m
	playerctl play-pause

# Previous song
super + u
	playerctl previous

# Next song
super + i
	playerctl next

# Volume down by 3
super + o
	pactl set-sink-volume @DEFAULT_SINK@ -3%

# Volume up by 3
super + p
	pactl set-sink-volume @DEFAULT_SINK@ +3%

# Switch Desktop
super + {1-9}
    D={1-9}; \
    bspc desktop -f "$(bspc query -D -m | sed -n "$D p")"

# #######
# super + shift
# #######

# Kill window
super + shift + x
	bspc node -k

# Remove receptacles
super + shift + BackSpace
	for i in $(bspc query -N -n .leaf.!window.local); do bspc node $i -k; done

# Try to keep size and position of the selected window
super + shift + p
	bspc node -g private

# Switch floating state on a window
super + shift + t
	{bspc node -t floating && window-placer $(bspc query -T -d | grep -o '"state":"floating"' | wc -l),bspc node -t tiled}

# Make window sticky
super + shift + s
	bspc node -g sticky

# Lock a window from closing
super + shift + Escape
	bspc node -g locked

# Make window master or move to preselected area
super + shift + Return
    windowpromoter

# Move window
super + shift + {h,j,k,l}
	windowgrabber {west,south,north,east}

super + shift + {Left,Down,Up,Right}
	windowgrabber {west,south,north,east}

# Move window to another desktop
super + shift + {1-9}
    D={1-9}; \
    bspc node -d "$(bspc query -D -m | sed -n "$D p")"

# Toggle monocle mode
super + shift + m
	bspc desktop -l next

# Toggle pseudo tiling mode of a window; ratio fix
super + shift + r
	bspc node -t {pseudo_tiled,tiled}

# Toggle fullscreen
super + shift + f
	bspc node -t {fullscreen,tiled}

# Balance tree
super + shift + b
	bspc node @/ -B

# Rotate leaves of tree
super + shift + {colon,quotedbl}
	bspc node @/ -R {90,270}

# Mirror and flip leaves of tree
super + shift + {bracketleft,bracketright}
	bspc node @/ -F {horizontal,vertical}

# Select previous / next desktop
super + shift + {comma,period}
	bspc monitor -f {prev,next}

# #######
# super + ctrl
# #######

# Cleanly quit bspwm
super + ctrl + q
	bspc quit 1 && killall polybar

# Restart bspwm
super + ctrl + r
	bspc wm -r

# Reload sxhkd configuration file
super + ctrl + Escape
	pkill -USR1 -x sxhkd

# In case bspwmrc fails to execute/you have plugged-in a new monitor
super + ctrl + f
	bspwmrc

# Hide a window
super + ctrl + c
    whid hide

# Unhide windows
super + ctrl + z
    whid dmenu

# Unhide last hidden window
super + ctrl + x
    whid last

# Resize windows
super + ctrl + {h,j,k,l}
	windowresize {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	windowresize {west,south,north,east}

# Undo balancing (equalize windows)
super + ctrl + b
	bspc node @/ -E

# Split window in its largest dimension
super + ctrl + space
	auto-presel

# Force all windows of the desktop to tile
super + ctrl + alt + t
	bspcp tile

# #######
# super + ctrl + shift
# #######

# Force all windows of the desktop to float and arrange them
super + ctrl + shift + t
	bspcp float

# Toggle compositing
super + ctrl + shift + space
	{pkill picom ,\
	picom -b }

# Presel window for splitting in certain direction
super + ctrl + shift + {a,s,w,d}
	bspc node -p \~{west,south,north,east} -i

# #######
# super + alt
# #######

# Split window in x direction
super + alt + {h,j,k,l}
	bspc node -p \~{west,south,north,east}

super + alt + {Left,Down,Up,Right}
	bspc node -p \~{west,south,north,east}

# Balance brother node. If you do this on biggest window of the desktop, it usually means balancing all windows with except the biggest.
super + alt + b
	bspc node @brother -B

# Resize floating window
super + alt + {h,j,k,l}
	xdotool getwindowfocus windowmove --relative %1 {-20 0, 0 +20, 0 -20, +20 0}

super + alt + {Left,Down,Up,Right}
	xdotool getwindowfocus windowmove --relative %1 {-20 0, 0 +20, 0 -20, +20 0}

# #######
# alt
# #######

# cycle windows
alt + {_,shift + }Tab
    bspc node -f {next,prev}

# #######
# alt + shift
# #######

# Take full-size screenshot and copy it to the clipboard
alt + shift + 3
	maim | xclip -selection  clipboard  -t image/png

# Take screenshot of a section and copy it to the clipboard
alt + shift + 4
	maim -s | xclip -selection  clipboard  -t image/png

# #######
# other
# #######

# Take a pretty screenshot of focused window
Print
	prettyscreenshot

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
	volume mute

XF86MonBrightnessDown
	light -U 5

XF86MonBrightnessUp
	light -A 5

XF86Sleep
	systemctl suspend
