# Show keybindings
super + F1
	keybindings
#	$TERMINAL -e keybindings

# Run rofi run
super + space
	rofi -show run

# Close window
super + x
	bspc node -c

# Switch floating state on a window
super + t
	{bspc node -t floating && window-placer $(bspc query -T -d | grep -o '"state":"floating"' | wc -l),bspc node -t tiled}

# Try to keep size and position of the selected window
super + o
	bspc node -g private

# Make window sticky
super + s
	bspc node -g sticky

# Make window master or  move to preselected area
super + Return
    windowpromoter

# Lock a window from closing
super + Escape
	bspc node -g locked

# Hide a window
super + c
    whid hide

# Select previous / next desktop
super + {comma,period}
	bspc desktop -f {prev.occupied,next.occupied}

# Go to specific window
super + Tab
	rofi -show window

#Focus windows by direction, works with multihead
super + {h,j,k,l}
    focusmover {west,south,north,east}

super + {Left,Down,Up,Right}
    focusmover {west,south,north,east}

# Mirror and flip leaves of tree
super + {n,m}
	bspc node @/ -F {horizontal,vertical}

# Toggle monocle mode
super + f
	bspc desktop -l next

# Balance tree
super + b
	bspc node @/ -B

# Mute song
super + m
	playerctl play-pause

# Previous song
super + F9
	playerctl previous

# Next song
super + F10
	playerctl next

# Volume down by 5
super + F11
	amixer -D pulse sset Master 5%-

# Volume up by 5
super + F12
	amixer -D pulse sset Master 5%+

# Remove receptacles
super + BackSpace
	for i in $(bspc query -N -n .leaf.!window.local); do bspc node $i -k; done

# Switch Desktop
super + {1-9,0}
	bspc desktop -f ^{1-9,10}

# #######
# super + shift
# #######

# Kill window
super + shift + x
	bspc node -k

# Emoji picker
super + shift + greater
	rofimoji

# Open terminal
super + shift + Return
	$TERMINAL

# Open the main editor
super + shift + e
	$EDITOR

# Open web browser
super + shift + b
	$BROWSER

# Open Firefox
super + shift + p
	firefox

# Open Discord
super + shift + d
	discord

# Open Thunar
super + shift + f
	thunar

# Move window
super + shift + {h,j,k,l}
	windowgrabber {west,south,north,east}

super + shift + {Left,Down,Up,Right}
	windowgrabber {west,south,north,east}

# Reload sxhkd configuration file
super + shift + Escape
	pkill -USR1 -x sxhkd

# In case bspwmrc fails to execute/you have plugged-in a new monitor
super + shift + r
	bspwmrc

# Move window to another desktop
super + shift + {1-9,0}
    bspc node -d ^{1-9,10}

# Rotate leaves of tree
super + shift + {n,m}
	bspc node @/ -R {90,270}

# #######
# super + ctrl
# #######

# Cleanly quit bspwm
super + ctrl + q
	bspc quit 1 && killall polybar

# Restart bspwm
super + ctrl + r
	bspc wm -r

# Toggle tiling mode of window
super + ctrl + t
	bspc   node -t {pseudo_tiled,tiled}

# Toggle fullscreen
super + ctrl + f
	bspc node -t {fullscreen,tiled}

# Unhide windows
super + ctrl + u
    whid dmenu

# Unhide last hidden window
super + ctrl + l
    whid last

# Resize windows
super + ctrl + {h,j,k,l}
	windowresize {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	windowresize {west,south,north,east}

# Undo balancing (equalize windows)
super + ctrl + b
	bspc node @/ -E

# Toggle compositing
super + ctrl + space
	{pkill picom ,\
	picom -b }

# #######
# super + ctrl + alt
# #######

# Force all windows of the desktop to tile
super + ctrl + alt + t
	bspcp tile

# #######
# super + ctrl + shift
# #######

# Force all windows of the desktop to float and arrange them
super + ctrl + shift + t
	bspcp float

# Resize Window
super + ctrl + shift + {h,j,k,l}
	bspc node -p \~{west,south,north,east}

super + ctrl + shift + {Left,Down,Up,Right}
	bspc node -p \~{west,south,north,east}

# #######
# super + alt
# #######

# Balance brother node. If you do this on biggest window of the desktop, it usually means balancing all windows with except the biggest.
super + alt + b
	bspc node @brother -B

# #######
# ctrl
# #######

# Split window in its largest dimension
ctrl + space
	auto-presel

# #######
# alt
# #######

# Toggle automatic balancing of windows
alt + b
	euclidbalancer

# #######
# alt + ctrl
# #######

# Presel window for splitting in certain direction
alt + ctrl + {a,s,w,d}
	bspc node -p \~{west,south,north,east} -i

# #######
# alt + shift
# #######

# Take full-size screenshot and copy it to the clipboard
alt + shift + 3
	maim | xclip -selection  clipboard  -t image/png

# Take screenshot of a section and copy it to the clipboard
alt + shift + 4
	maim -s | xclip -selection  clipboard  -t image/png

# #######
# other
# #######

# cycle windows
alt + {_,shift + }Tab
    bspc node -f {next,prev}


# Switch workspace by scrolling on the desktop. Causes scrolling issues on some systems.
~button4
	DidIClickDesktop && bspc desktop -f next
~button5
	DidIClickDesktop && bspc desktop -f prev

# Take a pretty screenshot of focused window
Print
	prettyscreenshot

XF86AudioRaiseVolume
	volume up

XF86AudioLowerVolume
	volume down

XF86AudioMute
	volume mute

XF86MonBrightnessDown
	light -U 5

XF86MonBrightnessUp
	light -A 5

XF86Sleep
	systemctl suspend


